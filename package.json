{
  "name": "chivy",
  "version": "2.0.1",
  "description": "可配置的前端日志打印工具.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.ts",
  "types": "lib",
  "type-check": "tsc",
  "scripts": {
    "test": "nyc mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc report --reporter=lcov",
    "es5": "rm -rf ./lib && tsc -p tsconfig.json",
    "prepublishOnly": "npm run test && npm run es5",
    "ci": "npm run test && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusangeng/chivy.git"
  },
  "keywords": [
    "log",
    "console",
    "console-log"
  ],
  "author": {
    "name": "yusangeng",
    "email": "yusangeng@outlook.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/dateformat": "^5.0.0",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "dateformat": "^5.0.2",
    "konph": "^3.0.1",
    "lodash": "^4.17.21",
    "tslib": "^2.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
