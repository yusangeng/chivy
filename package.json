{
  "name": "chivy",
  "version": "3.0.0-beta1",
  "description": "可配置的前端日志打印工具.",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "lint": "eslint --fix ./src && prettier --write ./src",
    "test2": "cross-env NODE_OPTIONS='--no-warnings --loader ts-node/esm' nyc mocha test/*.spec.ts",
    "test": "nyc mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc report --reporter=lcov",
    "esm": "rm -rf ./esm && rm -rf types && tsc -p tsconfig.esm.json",
    "cjs": "rm -rf ./cjs && tsc -p tsconfig.cjs.json",
    "build": "npm run esm && npm run cjs",
    "prepublishOnly": "npm run test && npm run build",
    "ci": "npm run lint && npm run build && npm run test && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusangeng/chivy.git"
  },
  "keywords": [
    "log",
    "console",
    "console-log"
  ],
  "author": {
    "name": "yusangeng",
    "email": "yusangeng@outlook.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/dateformat": "^5.0.0",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "dateformat": "^5.0.2",
    "konph": "^4.0.0",
    "lodash": "^4.17.21",
    "tslib": "^2.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
